#include<iostream>
#include<vector>
#include<math.h>

using namespace std;

int main (){
    int n;
    cin>>n;

    int temp;
    int group = 0;

    vector<int>v;
   for(int i = 0;i<n;i++){
    cin>>temp;
    v.push_back(temp);
   }

    for(int i = 0;i<n;i++){
    if(v[i] != v[i+1]) group++;
    }

    cout<<group;





    return 0;
}
